<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfApp2.Templates">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="TemplateLogin.xaml"/>
        <ResourceDictionary Source="TemplateRegistration.xaml"/>
        <ResourceDictionary Source="TemplateDashboard.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <local:MyTemplateSelector x:Key="MyTemplateSelector" 
                              TemplateLogin="{StaticResource Template1}"
                              TemplateRegistration="{StaticResource Template2}"
                              TemplateDashboard="{StaticResource Template3}"/>

</ResourceDictionary>